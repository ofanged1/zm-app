<VirtualHost *:80>
        DocumentRoot /usr/share/zoneminder/www
        DirectoryIndex index.php

        ScriptAlias /cgi-bin/ /usr/lib/zoneminder/cgi-bin
        <Directory "/usr/lib/zoneminder/cgi-bin">
                AllowOverride None
                Options +ExecCGI -MultiViews +SymLinksIfOwnerMatch
		require all granted
        </Directory>

</VirtualHost>
